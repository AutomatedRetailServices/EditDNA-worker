# Selection / funnel
FUNNEL_COUNTS=2,3,2,1         # ~8 clips → ~24–32s
VETO_MIN_SCORE=0.35           # keep more candidates than 0.40
BIN_SEC=1.0                   # scoring bin size

# Clip bounds
MIN_TAKE_SEC=2.0
MAX_DURATION_SEC=30           # hard ceiling used by the picker

# ASR / captions
ASR_ENABLED=1
ASR_MODEL_SIZE=tiny
ASR_LANG=en
CAPTIONS=off                  # off|soft|hard
V2_CAPTIONER=1

# Render quality (vertical)
FFMPEG_BIN=ffmpeg
FFPROBE_BIN=ffprobe
